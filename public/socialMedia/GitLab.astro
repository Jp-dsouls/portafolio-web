---
const { ref, currentColor, stroke, styleName } = Astro.props;
---

<a href={ref} class="flex justify-center items-center" target="_blank">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="100%"
    height="100%"
    viewBox="0 0 24 24"
    fill={currentColor}
    stroke={stroke}
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="icon icon-tabler icons-tabler-outline icon-tabler-brand-gitlab"
    style={styleName}
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M21 14l-9 7l-9 -7l3 -11l3 7h6l3 -7z"></path></svg
  >
</a>
