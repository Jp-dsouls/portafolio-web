---
const {dataTab} = Astro.props;
---
<div class="tab-content" data-tab={dataTab}>
  <slot/>
</div>

<style>
  .tab-content {
  transition: all 400ms cubic-bezier(.4,0,.2,1);
  opacity: 0;
  max-height: 0;
  pointer-events: none;
  overflow: hidden;
  transform: translateY(20px);
}

.tab-content.active {
  opacity: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  max-height: fit-content;
  transition: all 400ms cubic-bezier(.4,0,.2,1);
  transform: translateY(0px);
}
</style>