---
import Title from "./Title.astro"
---
<section class="container p-8 lg:md:sm:mx-auto">
  <div class="px-6 lg:px-8">
    <Title title="Contactame"/>
    <form action="https://formsubmit.co/werras04@gmail.com" method="POST" class="max-w-xl sm:mt-20">
      <div class="grid grid-cols-1 gap-x-8 sm:grid-cols-2">
        <label for="fullname" class="block text-sm font-semibold leading-6 text-white sm:col-span-2 mb-6">Nombre Completo
          <div class="mt-2.5">
            <input type="text" name="fullname" id="fullname" autocomplete="given-name" class="block w-full rounded-md border-0 px-3.5 py-2 text-slate-600 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6">
          </div>
        </label>

        <label for="email" class="block text-sm font-semibold leading-6 text-white sm:col-span-2 mb-6">Correo
          <div class="mt-2.5">
            <input type="email" name="email" autocomplete="email" class="block w-full rounded-md border-0 px-3.5 py-2 text-slate-600 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6">
          </div>
        </label>

          <label for="subject" class="block text-sm font-semibold leading-6 text-white sm:col-span-2 mb-6">Asunto
            <div class="mt-2.5">
              <input type="text" name="subject" autocomplete="organization" class="block w-full rounded-md border-0 px-3.5 py-2 text-slate-600 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6">
            </div>
          </label>

          <label for="message" class="block text-sm font-semibold leading-6 text-white sm:col-span-2 mb-6">Mensaje
            <div class="mt-2.5">
              <textarea name="message" id="message" rows="4" class="block w-full rounded-md border-0 px-3.5 py-2 text-slate-600 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6"></textarea>
            </div>
          </label>

      </div>
      <div class="mt-10">
        <button type="submit" class="block w-full rounded-md bg-[#0d1117] px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-[#253041] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Enviar</button>
      </div>
    </form>
  </div>
</section>