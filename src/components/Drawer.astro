
<div class="flex lg:md:sm:hidden order-1">
  <div class="drawer-items text-center mx-auto text-white lg:flex flex justify-center items-center gap-2 md:hidden">
    <button class="lg:md:sm:block tab-button" data-tab="1">
      <span class="line"></span>
      <span>Inicio</span>
    </button>
    <button class="lg:md:sm:block tab-button" data-tab="2">
      <span class="line"></span>
      <span>Experiencia</span>
    </button>
    <button class="lg:md:sm:block tab-button" data-tab="3">
      <span class="line"></span>
      <span>Skills</span>
    </button>
    <button class="lg:md:sm:block tab-button" data-tab="4">
      <span class="line"></span>
      <span>Proyectos</span>
    </button>
    <button class="lg:md:sm:block tab-button" data-tab="5">
      <span class="line"></span>
      <span>Contacto</span>
    </button>
  </div>
  <main class="py-8 relative bottom-full left-80">
    <aside class="drawer">
      <div class="ham">
        <div class="line upper-line"></div>
        <div class="line center-line"></div>
        <div class="line lower-line"></div>
      </div>
    </aside>
  </main>
</div>

<style>
    .fixed {
    height: 15vh;
  }
  .scrolled {
    background: linear-gradient(
      to bottom,
      rgba(46, 46, 46, 0.89),
      rgba(0, 0, 0, 0.014)
    );
    
  }
  .navigation > a {
    text-decoration: none !important;
  }
  .ham {
    display: flex;
    gap: 0.45rem;
    flex-direction: column;
    text-align: right;
    align-items: flex-start;
  }
  .ham:hover {
    cursor: pointer;
  }
  .line {
    width: 2.25rem;
    height: 0.3rem;
    background-color: #64748b;
    text-align: right;
    border-radius: 1rem;
    opacity: 1;
    transform-origin: center;
    transform: rotate(0) translate(0);
    transition:
      transform 0.25s linear,
      opacity 0.15s linear;
  }
  .upper-line.rotate-left {
    transform: translateY(0.75rem) rotate(135deg);
    background-color: white;
  }
  .center-line.vanish {
    opacity: 0;
  }
  .lower-line.rotate-right {
    transform: translateY(-0.75rem) rotate(-135deg);
  }

  ul {
    list-style: none;
  }
  .drawer-items {
    background: #8296b1;
    height: 104vh;
    position: fixed;
    right: 0rem;
    top: -2rem;
    transform: scaleX(0);
    transition: all 0.25s linear;
    transform-origin: right;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    font-size: 2rem;
    justify-content: center;
    padding: 2rem;
  }
  .drawer-items.visible {
    transform: scaleX(100%);
    box-shadow: 0 0 10px;
  }
</style>

<script
is:inline
src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"
></script>
<script is:inline>
$(document).ready(function () {
$(".hamburger").click(function () {
$(this).toggleClass("is-active");
});

$(window).scroll(function () {
if ($(this).scrollTop() > 10) {
  // Ajusta el valor seg√∫n sea necesario
  $(".fixed").addClass("scrolled");
} else {
  $(".fixed").removeClass("scrolled");
}
});
});
document.querySelector(".ham").addEventListener("click", changeIcon);

function changeIcon(event) {
let ham = event.currentTarget;
ham.classList.toggle("clicked");
ham.children[0].classList.toggle("rotate-left");
ham.children[1].classList.toggle("vanish");
ham.children[2].classList.toggle("rotate-right");
document.querySelector(".drawer-items").classList.toggle("visible");
}
</script>